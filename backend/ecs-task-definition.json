{
  "family": "disastershield-backend",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "disastershield-backend",
      "image": "YOUR_ACCOUNT_ID.dkr.ecr.us-east-1.amazonaws.com/disastershield:latest",
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "REDDIT_CLIENT_ID",
          "value": "your-reddit-client-id"
        },
        {
          "name": "REDDIT_CLIENT_SECRET",
          "value": "your-reddit-client-secret"
        },
        {
          "name": "REDDIT_USER_AGENT",
          "value": "DisasterShield:v1.0:by-student"
        },
        {
          "name": "JWT_SECRET_KEY",
          "value": "DisasterShield-AWS-Secret-Key-2024"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/disastershield-backend",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "essential": true
    }
  ]
}